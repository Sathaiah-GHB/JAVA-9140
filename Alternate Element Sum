import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
       Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int a[]=new int[n];
        for(int i=0;i<n;i++){
            a[i]=s.nextInt();
        }
        int su=0;
        for(int i=0;i<n;i++){
            if(i%2==0||i==0){
                su=su+a[i];
            }
        }
        System.out.println(su);
    }
}
